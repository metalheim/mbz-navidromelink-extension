{
	"manifest_version": 2,
	"name": "mbz-navidromelink",
	"version": "0.1",
	"description": "Adds a button to every musicbrainz website, linking to the artist/song/album in your navidrome server",
	"homepage_url": "https://github.com/metalheim/mbz-navidromelink",
	"icons": {
		"48": "icons/favicon-32x32.png"
	},
	"permissions": [
		"activeTab",
		"storage"
	],
	"browser_action": {
		"default_icon": "icons/favicon-32x32.png",
		"default_title": "mbz-navidromelink",
		"default_popup": "login.html"
	},
	"web_accessible_resources": [
		"icons/favicon-32x32.png",
		"mbz-navidromelink.css",
		"mbz-navidromelinker.js"
	],
	"content_scripts": [
		{
			"matches": ["*://*.musicbrainz.org/*"],
			"js": ["mbz-navidromelinker.js"],
			"css": ["mbz-navidromelink.css"],
			"run_at": "document_start"
		}
	]
}